---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import CenteredContent from '../components/CenteredContent.astro';
import Button from '../components/Button.astro';

import heroImage from '../assets/hero.png';
---

<Layout>
	<div class="flex flex-col items-center bg-red-100">
		<Header/>
		<CenteredContent>
			<div class="flex flex-col lg:flex-row-reverse items-center gap-8 py-8 lg:gap-24 lg:px-24">
				<img src={heroImage.src} class="w-[296px]" alt="Hero Image"/>
				<div class="flex flex-col justify-center gap-4">
					<h1 class="font-family-heading text-2xl md:text-4xl text-red-900 font-bold">Consoles retros remises au gout du jour</h1>
					<p class="md:text-lg font-medium text-red-700">Restauration de consoles existantes et créations de toutes pièces</p>
					<div class="flex">
						<Button href="/consoles">Voir les consoles</Button>
					</div>
				</div>
			</div>
		</CenteredContent>
	</div>
</Layout>
